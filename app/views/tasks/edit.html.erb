<div class="row">
  <%= form_for(@task, url: task_path, html: { class: "form-horizontal" }) do |f| %>
  <div class="control-group">
    <%= f.label :title, class: "control-label" %>
    <%= f.text_field :title, placeholder: @task.title %>
  </div>

  <div class="control-group">
    <%= f.label :description, class: "control-label" %>
    <%= f.text_field :description, placeholder: @task.description %>
  </div>

  <div class="control-group">
    <%= f.label :due_date, class: "control-label" %>
    <%= f.date_field :due_date, placeholder: @task.due_date %>
  </div>

  <div>
    <%= f.submit "Update this Task" %>
  </div>
  <% end %>

</div>
